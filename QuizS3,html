        }

        // Funci√≥n para crear mega celebraci√≥n
        function createMegaCelebration() {
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + 'vw';
                    confetti.style.background = `hsl(${Math.random() * 360}, 80%, 60%)`;
                    confetti.style.animationDuration = (Math.random() * 3 + 2) + 's';
                    confetti.style.width = (Math.random() * 10 + 5) + 'px';
                    confetti.style.height = confetti.style.width;
                    document.body.appendChild(confetti);
                    
                    setTimeout(() => confetti.remove(), 5000);
                }, i * 50);
            }
        }

        // Funci√≥n para iniciar el quiz
        function startQuiz() {
            isQuizStarted = true;
            currentQuestionIndex = 0;
            score = 0;
            userAnswers = [];
            
            selectRandomQuestions();
            displayQuestion(0);
            
            startBtn.style.display = 'none';
            questionContainer.style.display = 'block';
            
            updateScore();
        }

        // Funci√≥n para reiniciar el quiz
        function restartQuiz() {
            isQuizStarted = false;
            isQuizCompleted = false;
            currentQuestionIndex = 0;
            score = 0;
            userAnswers = [];
            selectedQuestions = [];
            
            resultsContainer.style.display = 'none';
            questionContainer.style.display = 'block';
            restartBtn.style.display = 'none';
            startBtn.style.display = 'inline-block';
            nextBtn.style.display = 'none';
            
            // Resetear display de puntuaci√≥n
            currentQuestionEl.textContent = '1';
            scoreEl.textContent = '0';
            percentageEl.textContent = '0%';
            
            // Mostrar mensaje inicial
            questionContainer.innerHTML = `
                <div style="text-align: center; padding: 60px 20px;">
                    <div style="font-size: 6rem; margin-bottom: 30px;">üßÆ‚ö°üéØ</div>
                    <h2 style="color: #ffd700; margin-bottom: 20px;">¬øListo para demostrar tu conocimiento?</h2>
                    <p style="font-size: 1.2rem; opacity: 0.9; margin-bottom: 30px;">
                        10 preguntas aleatorias sobre simplificaci√≥n booleana, mapas de Karnaugh y compuertas l√≥gicas.
                    </p>
                    <div style="background: rgba(255, 255, 255, 0.1); border-radius: 15px; padding: 25px; margin: 20px 0;">
                        <h3 style="color: #ffd700; margin-bottom: 15px;">üìã Temas del Quiz:</h3>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; text-align: left;">
                            <div>‚úÖ Leyes b√°sicas del √°lgebra booleana</div>
                            <div>‚ö° Teoremas de De Morgan</div>
                            <div>üå™Ô∏è Leyes de absorci√≥n</div>
                            <div>üó∫Ô∏è Mapas de Karnaugh</div>
                            <div>üîß Compuertas l√≥gicas</div>
                            <div>üìù Simplificaci√≥n pr√°ctica</div>
                        </div>
                    </div>
                    <p style="font-size: 1rem; opacity: 0.8;">
                        üí° <strong>Tip:</strong> Lee cada pregunta con cuidado y recuerda las reglas que aprendiste en clase.
                    </p>
                </div>
            `;
        }

        // Event listeners
        startBtn.addEventListener('click', startQuiz);
        nextBtn.addEventListener('click', nextQuestion);
        restartBtn.addEventListener('click', restartQuiz);

        // Navegaci√≥n por teclado
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && nextBtn.style.display !== 'none') {
                nextQuestion();
            }
        });

        // Inicializaci√≥n
        document.addEventListener('DOMContentLoaded', function() {
            restartQuiz(); // Configurar estado inicial
        });
    </script>
